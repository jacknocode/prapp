<%= form_for @category do |f| %>
<p>
  <%= f.text_field :name, placeholder: '名前を入力してください' %>
  <% if @category.errors.messages[:name].any? %>
  <span class="error"><%= @category.errors.messages[:name][0] %></span>
  <% end %>
</p>
<p class="flex">
  <%= f.submit class: "btn btn-primary active" %>
</p>
<% end %>
