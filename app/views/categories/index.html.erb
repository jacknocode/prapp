<% provide(:title, "カテゴリ一覧") %>
<ul>
<% @categories.each do |category| %>
<li>
<%= link_to category.name, category_path(category) %>
<%= link_to '[Edit]', edit_category_path(category), class: 'command' %>
<%= link_to '[x]',category_path(category),method: :delete,class: 'command',data: { confirm: 'Sure?' } %>
</li>
<% end %>
</ul>
